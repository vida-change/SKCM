      nsets = 7,                    
      order.by = "freq",            
      show.numbers = "yes",         
      number.angles = 20,          
      point.size = 1.5,            
      matrix.color="red",         
      line.size = 0.8,              
      mainbar.y.label = "Gene Intersections",
